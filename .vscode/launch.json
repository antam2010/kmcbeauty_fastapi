{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app", // 파일명:객체명
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "APP_ENV": "debug"
            }
        }
    ]
}